<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp">

        <GridLayout
            android:id="@+id/main_grid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="start|center"
            android:paddingStart="20.0dip"
            android:paddingTop="5dp"
            android:paddingEnd="20.0dip"
            android:paddingBottom="20.0dip"
            android:alignmentMode="alignBounds"
            android:columnCount="@integer/gridInfo"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device"
                    android:textSize="18sp"
                    android:textStyle="bold" 
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/device_codename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="Unknown"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processor"
                    android:textSize="18sp"
                    android:textStyle="bold" 
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/proc_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="Unknown"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chipset"
                    android:textSize="18sp"
                    android:textStyle="bold" 
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/cpu_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="Unknown"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screen Size"
                    android:textSize="18sp"
                    android:textStyle="bold" 
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/screen_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="Unknown"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storage"
                    android:textSize="18sp"
                    android:textStyle="bold" 
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/memory_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="Unknown"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery Capacity"
                    android:textSize="18sp"
                    android:textStyle="bold" 
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/batt_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:text="Unknown"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12.0sp" />
            </LinearLayout>

        </GridLayout>

</FrameLayout>
